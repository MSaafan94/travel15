<odoo>
    <data>
        <record id="lead_cost_tree" model="ir.ui.view">
            <field name="name">lead.cost.tree</field>
            <field name="model">custom_crm_cost_per_lead.lead_cost</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="lead_id"/>
                    <field name="salesperson_id"/>
                    <field name="cost_per_lead"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="lead_cost_form" model="ir.ui.view">
            <field name="name">lead.cost.form</field>
            <field name="model">custom_crm_cost_per_lead.lead_cost</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="lead_id"/>
                            <field name="salesperson_id"/>
                            <field name="cost_per_lead"/>
                            <field name="date"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
