<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Restrict Log Edit/Delete group -->
        <record id="group_restrict_log_edit_delete" model="res.groups">
            <field name="name">Restrict Log Edit/Delete</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- Restrict log edit and delete for users not in the group -->
        <record id="ir_rule_log_edit_restrict" model="ir.rule">
            <field name="name">Log Edit Restriction</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="groups" eval="[(4, ref('group_restrict_log_edit_delete'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>