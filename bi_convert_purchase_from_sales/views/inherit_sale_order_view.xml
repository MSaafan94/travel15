<?xml version="1.0"?>
<odoo>
    <data>

        <!-- FORM VIEW  -->

        <record id="sale_order_view" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header>
                    <button name="%(action_transientmodel_wizard)d" string="Create Purchase Order" type="action"
                            class="btn-primary" attrs="{'invisible':[('state','in',['done','cancel'])]}"/>
                </header>
                <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="action_open_purchase_order" type="object"
                            class="oe_stat_button"
                            icon="fa-th-list">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="po_count"/>
                            </span>
                            <span class="o_stat_text">Purchase</span>
                            <span class="o_stat_text">Orders</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

            <!-- Purchase Order list view for related Sale Orders -->
    <record id="view_purchase_order_tree_related" model="ir.ui.view">
        <field name="name">purchase.order.tree.related</field>
        <field name="model">purchase.order</field>
        <field name="arch" type="xml">
            <tree string="Purchase Orders">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action to open related Purchase Orders -->
   <record id="action_open_related_purchase_orders" model="ir.actions.act_window">
    <field name="name">Related Purchase Orders</field>
    <field name="res_model">purchase.order</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_purchase_order_tree_related"/>
    <field name="domain">[('origin', '=', active_id)]</field>
    <field name="context">{'search_default_group_by_partner_id': 1, 'default_origin': active_id}</field>
</record>

    <!-- Button to open related Purchase Orders from Sale Order form -->
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button name="%(action_open_related_purchase_orders)d" type="action"
                        string="Purchase Orders"
                        class="oe_stat_button"
                        attrs="{'invisible': [('po_count', '=', 0)]}"
                        icon="fa-shopping-cart">
                    <field name="po_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
    </data>
</odoo>

